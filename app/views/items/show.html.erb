<h1> <%= @item.name %> </h1> 
<h4> Description: <%= @item.description %> </h4> 
<h4> Price: $<%= @item.price %> </h4>
<hr />
<%# <h2> Ratings </h2> %>
<%# <%= binding.pry > %>
<h3> Average Rating: <%= @item.average_rating %> </h3>
<%= link_to 'Add New Rating', new_item_rating_path(@item) %>
<br />
<%= link_to 'View All Ratings', item_ratings_path(@item) %>
<hr />
<h3> Comments </h3>
<ul>
  <% @item.comments.each do |comment| %>
    <%# <%= binding.pry %>
    <li> <%= link_to comment.title, [@item, comment] %> </li>
    <body> - <%= comment.author %> </body>
  <% end %>
</ul>
<%= link_to 'Add Comment', new_item_comment_path(@item) %>
<hr />
<%= link_to 'Edit Item', edit_department_item_path([@department, @item]) %>
<br />
<%= link_to 'Delete Item', [@department, @item], method: :delete %>
<br />
<%= link_to 'Back to Items', department_path(@department) %>